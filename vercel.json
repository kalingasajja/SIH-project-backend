{
  "version": 2,
  "builds": [
    { 
      "src": "frontend/supply-chain-system/package.json", 
      "use": "@vercel/next",
      "config": { "distDir": ".next" }
    },
    { 
      "src": "backend/src/server.js", 
      "use": "@vercel/node" 
    }
  ],
  "routes": [
    {
      "src": "/backend/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/supply-chain-system/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/$1"
    }
  ]
}


